@import "./base/variables.styl"

.editor
    background-color $color-default
    position absolute
    width 100%
    bottom 0
    overflow-x auto
    white-space nowrap

.editor__filter
    display inline-block
    width 50px
    height 50px
    line-height 50px

    .editor__filter-state
        text-align center

        .editor__icon
            color $color-bg