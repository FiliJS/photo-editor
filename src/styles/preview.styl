@import "./base/variables.styl"

.preview__image-container
    .preview__image
        position absolute
        width 100%
        top 0
        bottom 0
        margin auto


.preview__filterValueList
    position absolute
    background-color rgba(black, 0.5)
    width 100%
    height 50px
    bottom 50px
    box-sizing border-box
    padding 0 1em

    .filterValue
        display flex
        align-items center
        width 100%
        height 50px
        box-sizing border-box

        .filter-range
            width 100%